<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <com.qmuiteam.qmui.widget.QMUIViewPager
            android:id="@+id/mViewPager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/app_content_bg_color"
            app:layout_constraintBottom_toTopOf="@+id/mTabSegment"
            app:layout_constraintTop_toTopOf="parent"/>

    <com.qmuiteam.qmui.widget.QMUITabSegment
            android:id="@+id/mTabSegment"
            android:layout_width="match_parent"
            android:layout_height="@dimen/home_tab_height"
            android:background="@drawable/qmui_list_item_bg_with_border_top"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:qmui_tab_icon_position="top" />

</androidx.constraintlayout.widget.ConstraintLayout>